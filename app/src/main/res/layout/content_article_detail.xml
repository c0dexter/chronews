<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/content_article_detail_root_nested_scroll_view_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_article_detail">

    <LinearLayout
        android:id="@+id/content_article_detail_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_article_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/customColorPrimaryText"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Nie stać mnie na kredens więc trzymam bloku poziom" />

        <TextView
            android:id="@+id/text_article_detail_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/customColorSecondaryText"
            android:visibility="gone"
            tools:text="Adam van Bendler"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_article_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            tools:text="@string/large_text" />

            <TextView
                android:id="@+id/text_article_detail_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/read_more"
                android:padding="@dimen/fab_margin"
                android:layout_gravity="end"
                android:textColor="@color/customColorAccent"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>